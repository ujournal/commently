# Flarum app
APP_DEBUG=false
APP_URL=http://localhost
APP_API_PATH=api
APP_ADMIN_PATH=admin
APP_HEADER_POWERED_BY=true
APP_REFERRER_POLICY=same-origin

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=flarum
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT=false
DB_ENGINE=InnoDB

